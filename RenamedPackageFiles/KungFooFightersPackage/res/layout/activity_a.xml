<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" 
    android:paddingTop="16dp"
    android:background="@drawable/bg" >
    
    <TextView
        android:textIsSelectable="true" 
        android:id="@+id/presentField"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/present"
        android:gravity="center"
        android:text="@string/presenting"
        android:textColor="@color/transparent"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/presentTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:layout_below="@id/presentField"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/transparent"
        android:textSize="30sp" />
   
    <Button
        android:id="@+id/BalanceBallBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/BalanceBallText"
        android:layout_below="@id/presentTitle" 
        android:onClick="startActivityB"/>
    <Button
        android:id="@+id/ReactionTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BalanceBallBtn"
        android:text="@string/ReactionTimeText" 
        android:onClick="startActivityC"/>
    <Button
        android:id="@+id/LogicTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ReactionTimeBtn"
        android:text="@string/LogicTestText"
        android:layout_marginBottom="10dp"
        android:onClick="startMainActivity" />
    <Button
        android:id="@+id/FinalScoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/LogicTestBtn"
        android:text="@string/FinalScoreText" 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="startScoreDisplay"/>
    <Button
        android:id="@+id/InstructionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/FinalScoreBtn"
        android:text="@string/InstructionsText"
        android:onClick="startDialog" />
    <Button
        android:id="@+id/ExitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/InstructionsBtn"
        android:text="@string/ExitText" 
        android:onClick="finishActivityA"/>
    
    
</RelativeLayout>